Config { font = "-misc-fixed-*-*-*-*-13-*-*-*-*-*-*-*"
       , bgColor = "black"
       , fgColor = "grey"
       , position = TopW L 100
       , lowerOnStart = True
       , commands = [ Run Cpu ["-L","20","-H","65","--normal","green","--high","red"] 10
                    , Run Date "%a %b %_d %Y %H:%M:%S" "date" 10
                    , Run StdinReader
                    , Run Battery
                      ["-t", "Battery: <left>%",
                      "-L", "10", "-H", "80", "-p", "3",
                      "--", "-O", "<fc=green>On</fc> - ", "-i", "",
                      "-L", "-15", "-H", "-5",
                      "-l", "red", "-m", "yellow"]
                      300
		            , Run Network "wlan0" ["-t", "<dev>: <rx>KB|<tx>KB | "] 10
		            , Run Network "eth0" ["-t", "<dev>: <rx>KB|<tx>KB | "] 10
		            , Run PipeReader "/home/exfalso/.xmacro/status" "xmacro"
                    , Run DiskU [ ("/", "/: <free>/<size>")
                                , ("/data", "| data: <free>/<size>")
                                ] [] 20
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = "%StdinReader% <fc=#FF0000>%xmacro%</fc> }{ %eth0%%wlan0%%cpu% | %battery% | %disku% | %date%"
       }
